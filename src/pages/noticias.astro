---
import Layout from "../layouts/Layout.astro";
import BlogPost from "../components/BlogPost.astro";
import { getCollection } from "astro:content";

const allPosts = await getCollection("blog");
---

<Layout title="Noticias">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <header class="mb-10 space-y-3 text-center md:text-left">
      <h1
        class="text-6xl md:text-7xl font-extrabold text-slate-800 dark:text-white leading-[1.05] tracking-tight"
      >
        Noticias
      </h1>
      <p class="text-base text-slate-500">
        Enterate de todas las noticias que tenemos para ti, haz clic en algun
        post para ver de que trata.
      </p>
    </header>

    <section class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {
        allPosts.map((post: any) => (
          <BlogPost
            url={`/noticias/${post.id}`}
            title={post.data.title}
            description={post.data.description}
            pubDate={post.data.pubDate}
            author={post.data.author}
            image={post.data.image}
            tags={post.data.tags}
          />
        ))
      }
    </section>
  </div>
</Layout>
