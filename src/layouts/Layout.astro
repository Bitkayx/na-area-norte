---
import "../styles/global.css";
import { ClientRouter } from "astro:transitions";
import DarkMode from "@components/DarkMode.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;

const navigation = [
  { label: "Inicio", href: "/" },
  { label: "Servicios", href: "/servicios/" },
  { label: "Directorio", href: "/directorio/" },
  { label: "Noticias", href: "/noticias/" },
];
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>

    <DarkMode />
  </head>
  <body
    class="bg-[#fcfdfd] dark:bg-background-dark text-slate-900 dark:text-slate-100 transition-colors duration 300 min-h-screen flex flex-col"
  >
    <ClientRouter />
    <Header navigation={navigation} />
    <main class="flex-1 max-w-300 mx-auto px-6">
      <slot />
    </main>
    <Footer />
  </body>
</html>
